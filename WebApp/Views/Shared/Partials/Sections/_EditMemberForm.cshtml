@model EditMemberForm
<div id="editMemberModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Edit Member</h3>
            <button class="btn-close" data-close="true" type="button"></button>
        </div>
        <form method="post" novalidate asp-action="EditMember" asp-controller="Members" >
            <input type="hidden" asp-for="MemberId" readonly/>

            <div class="image-previewer circle ">
                <img src=""class="image-preview"/>
                <input asp-for="MemberImage" accept="image/*" class="hidden" />
                
            </div>
            <div class="form-group">
                <label asp-for="MemberName"></label>
                <div class="field-group">
                <input asp-for="MemberName"/>
                <span asp-validation-for="MemberName"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <div class="field-group">
                <input asp-for="Email"/>
                <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Location"></label>
                <div class="field-group">
                <input asp-for="Location"/>
                <span asp-validation-for="Location"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Phone"></label>
                <div class="field-group">
                <input asp-for="Phone"/>
                <span asp-validation-for="Phone"></span>
                </div>
            </div>
           
            
            <button type="submit" class="btn btn-blue btn-submit">Save</button>
        </form>
    </div>
</div>